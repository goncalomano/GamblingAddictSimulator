{
  "name": "gamblingaddictsimulator",
  "version": "1.0.0",
  "description": "MVP web app simulating an average worker addicted to blackjack gambling.",
  "main": "server/index.js",
  "scripts": {
    "server": "nodemon server/index.js",
    "start": "node server/index.js",
    "client": "npm run dev --prefix client",
    "build:client": "npm run build --prefix client",
    "preview:client": "npm run preview --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "postinstall": "npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "nodemon": "^3.1.11"
  }
}
