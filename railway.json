{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "watchPatterns": [
      "package.json",
      "package-lock.json",
      "client/package.json",
      "client/vite.config.ts",
      "client/src/**/*",
      "server/**/*"
    ]
  },
  "deploy": {
    "startCommand": "npm start",
    "numReplicas": 1
  }
}
